{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build using Ninja generator",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug Config",
            "description": "Debug build with symbols",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "displayName": "Release Config", 
            "description": "Optimized release build",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "debug-with-tests",
            "displayName": "Debug with Tests",
            "description": "Debug build with unit tests enabled",
            "inherits": "debug",
            "cacheVariables": {
                "BUILD_TESTS": "ON"
            }
        },
        {
            "name": "release-with-tests",
            "displayName": "Release with Tests",
            "description": "Release build with unit tests enabled", 
            "inherits": "release",
            "cacheVariables": {
                "BUILD_TESTS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "debug-with-tests",
            "configurePreset": "debug-with-tests"
        },
        {
            "name": "release-with-tests",
            "configurePreset": "release-with-tests"
        }
    ],
    "testPresets": [
        {
            "name": "debug-tests",
            "configurePreset": "debug-with-tests",
            "description": "Run unit tests in debug mode"
        },
        {
            "name": "release-tests", 
            "configurePreset": "release-with-tests",
            "description": "Run unit tests in release mode"
        }
    ]
}